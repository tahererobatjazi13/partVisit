<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/month_navigation_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="@dimen/calendar_navigation_top_padding"
        android:paddingBottom="@dimen/calendar_navigation_bottom_padding">

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/month_navigation_previous"
            style="?attr/navigationButtonStyle"
            android:layout_width="@dimen/min_touch_target_size"
            android:layout_height="@dimen/calendar_navigation_height"
            android:src="@drawable/ic_arrow_left" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/month_navigation_next"
            style="?attr/navigationButtonStyle"
            android:layout_width="@dimen/min_touch_target_size"
            android:layout_height="@dimen/calendar_navigation_height"
            android:src="@drawable/ic_arrow_right" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            tools:ignore="RtlHardcoded">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/month_navigation_fragment_toggle"
                style="@style/MediumTextStyle"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/calendar_navigation_height"
                android:clickable="true"
                android:ellipsize="none"
                android:focusable="true"
                android:gravity="right|center_vertical"
                android:paddingEnd="@dimen/calendar_content_padding"
                android:paddingRight="@dimen/calendar_content_padding"
                android:singleLine="true"
                app:drawableLeftCompat="@drawable/ic_menu_arrow_down"
                tools:ignore="RtlHardcoded,RtlSymmetry" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/calendar_selection_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/calendar_year_selector_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:scrollbars="none" />

        <LinearLayout
            android:id="@+id/calendar_day_selector_frame"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <GridView
                android:id="@+id/calendar_days_of_week"
                android:layout_width="match_parent"
                android:layout_height="@dimen/calendar_days_of_week_height"
                android:gravity="center_horizontal"
                android:horizontalSpacing="@dimen/calendar_month_horizontal_padding" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/calendar_months"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/small_size"
                android:listSelector="@android:color/transparent" />

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
